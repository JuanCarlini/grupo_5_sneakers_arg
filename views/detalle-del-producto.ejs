<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %> 
<body>
    <%- include('./partials/header') %> 
    <main>
        <section>
            <h3>Todos los productos</h3>
            <div class="products">
                <% for (i = 0 ; i < products.length ; i++) { %>
                    <article>
                        <a href="/products/<%= products[i].id %>" class="text-product">
                            <img src="/images/products/<%= products[i].image %>" alt="<%= products[i].model %>" class="product_img">
                            <div class="main-article">
                                <h4 class="description"><%= products[i].model %></h4>
                                <p class="price">$<%= products[i].price %></p>
                            </div>
                        </a>
                    </article>
                <% } %>
            </div>
        </section>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>