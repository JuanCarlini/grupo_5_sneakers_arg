<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body class="formulario">
    
    <%- include('./partials/header') %>
    <main class="formulario-registro">
            <form action="/register" method="POST" class ="form-box" enctype="multipart/form-data">
            <h1 class="title">Welcome back :)</h3>
            <input type="text" name="name" placeholder="Nombre">
            <% if (locals.errors && errors.name) { %>
                <div class="text-danger">
                   <%= errors.name.msg %>
              </div>
                <% } %>
            
            <input type="text" name="surname" placeholder="Apellido">
            <% if (locals.errors && errors.surname) { %>
                <div class="text-danger">
                   <%= errors.surname.msg %>
              </div>
                <% } %>

                <input type="text" name="email" placeholder="Email">
                <% if (locals.errors && errors.email) { %>
                    <div class="text-danger">
                       <%= errors.email.msg %>
                  </div>
                    <% } %>

            <input type="text" name="user" placeholder="Nombre de usuario" >
            <% if (locals.errors && errors.user) { %>
                <div class="text-danger">
                   <%= errors.user.msg %>
              </div>
                <% } %>

            <input type="password" name="pass" placeholder="Contraseña">
            <% if (locals.errors && errors.pass) { %>
                <div class="text-danger">
                   <%= errors.pass.msg %>
              </div>
                <% } %>
                
            <input type="password" name="confirmpass" placeholder="Confirmar contraseña">
            <% if (locals.errors && errors.confirmpass) { %>
                <div class="text-danger">
                   <%= errors.confirmpass.msg %>
              </div>
                <% } %>
            <input type="submit" value="Enviar">
            <label><b>Imagen de perfil:</b></label>
            <input class="form-control" type="file" name="avatar"> 
                  
                </form>
            </main>
    <%- include('./partials/footer') %>
    
</body>
</html>

