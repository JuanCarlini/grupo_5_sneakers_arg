<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body class="formulario">
    
    <%- include('./partials/header') %>
    <main class="formulario-registro">
        <% if(locals.errors) { %>
         <% for ( let oneEror in errors ) { %>
            <p><% errors[oneEror].msg %></p>
        <% } %>
    <% } %>
        <form action="/register" method="POST" class ="form-box">
            <h1 class="title">Welome back :)</h3>
            <input type="text" name="name" placeholder="Nombre" required>
            <% if (local.errors && errors.name) { %>
                <div class="text-danger">
                    Aca va ir el error
                </div>
            <% } %>
            
            <input type="text" name="surname" placeholder="Apellido" required>
            <input type="text" name="user" placeholder="Nombre de usuario" required>
            <input type="password" name="pass" placeholder="Contraseña" required>
            <input type="password" name="confirm-pass" placeholder="Confirmar contraseña" required>
            <input type="submit" value="Enviar">
            <label><b>Imagen de perfil:</b></label>
            <input class="form-control" type="file" name="avatar"> 
                  
                </form>
            </main>
    <%- include('./partials/footer') %>
    
</body>
</html>

