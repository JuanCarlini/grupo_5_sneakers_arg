<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %> 
<body class="grid-container">

    <%- include('./partials/header') %> 
    <main class="main">
        <section class="productos-destacados">
            <h3>PRODUCTOS DESTACADOS</h3>
            <div  class="product_img-destacado">
                <div class="box">
                    <a href="/:id" class="texto">
                    <img src="images/nike-flyEase.jpg" alt="Nike FlyEase" class="foto">
                </div>
            </div>
            <article class="producto-destacado">
                <div class="product-destacado">
                        <h4 class="description">Nike FlyEase  $46.999</h4>
                </div>
                </a>
            </article>
        </section>
        <section class="ultimos-productos">          
            <h3>ULTIMOS PRODUCTOS</h3>
            <div class="products">
                <article class="producto-individual">
                    <a href="/:id">
                        <img src="images/nike-air-max.jpg" alt="Nike Air Max" class="product_img">
                    <div class="product">
                        <h4 class="description">Nike Air Max</h4>
                        <p class="price">$16.000</p>
                    </div>
                    </a>
                </article>
                <article class="producto-individual">
                    
                    <a href="/:id">
                        <img src="images/nike-air-force.jpg" alt="Nike Air Force" class="product_img">
                        <div class="product">
                            <h4 class="description">Nike Air Force</h4>
                            <p class="price">$16.500</p>
                        </div>
                    </a>
                </article>
            </div>
        </section>
    </main>
    <%- include('./partials/footer') %> 
</body>
</html>