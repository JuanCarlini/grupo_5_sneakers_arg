<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %> 
<body>
    <%- include('./partials/header') %>
    <main>
        <% if (typeof errors != "undefined"){ %>
            <p style="color: red">ERROR</p>
            <ul>
                <% for (let i = 0; i < errors.length; i++){ %>
                    <li>
                        <%= errors(i).msg %>
                    </li>
                <% } %>
            </ul>
        <% } %>
        <form action="/product/create" method="POST" class ="form-box-admin" enctype="multipart/form-data">
            <h1 class="title">Crear Producto</h3>
            <input type="text" name="name" placeholder="Nombre" required>
            <input type="text" name="surname" placeholder="Descripción" required>
            <label>Elija una o más imágenes</label>
            <input type="file" name="product-image" placeholder="Imagen" required>
            <input type="text" name="category" placeholder="Categoría" required>
            <input type="text" name="color" placeholder="Colores" required>
            <input type="number" name="price" placeholder="Precio" required>
            <input type="submit" value="Enviar">
        </form>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>