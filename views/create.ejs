<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %> 
<body>
    <%- include('./partials/header') %>
    <main>
        <% if (typeof errors != "undefined"){ %>
           
            <ul>
                <% for (let i = 0; i < errors.length; i++){ %>
                    <li>
                        <%= errors(i).msg %>
                    </li>
                <% } %>
            </ul>
        <% } %>
        <form action="/admin/create" method="POST" class ="form-box-admin create" enctype="multipart/form-data">
            <h1 class="title">Crear Producto</h3>
                <div class="errors" style="color: red;">
                    <ul></ul>
                </div>
            <br>
            <input type="text" name="name" placeholder="Nombre"value="<%= locals.oldData ? oldData.name : null%>">
            <% if (locals.errors && errors.name) { %>
                <div class="text-danger">
                   <%= errors.name.msg %>
              </div>
                <% } %>

            <textarea name="description" placeholder="Descripción"value="<%= locals.oldData ? oldData.description : null%>"></textarea>
            <% if (locals.errors && errors.name) { %>
                <div class="text-danger">
                   <%= errors.description.msg %>
              </div>
                <% } %>

            <br>
            <label>Elija una o más imágenes</label>
            <br>           
            <input type="file" name="productimage" placeholder="Imagen">

            <br>
    
            <% if (locals.errors && errors.productimage) { %>
                <div class="text-danger">
                   <%= errors.productimage.msg %>
              </div>
                <% } %>
            <input type="text" name="category" placeholder="Categoría">
            <% if (locals.errors && errors.name) { %>
                <div class="text-danger">
                   <%= errors.category.msg %>
              </div>
                <% } %>

            <input type="text" name="color" placeholder="Colores">
            <% if (locals.errors && errors.name) { %>
                <div class="text-danger">
                   <%= errors.color.msg %>
              </div>
                <% } %>

            <input type="number" name="price" placeholder="Precio">
            <% if (locals.errors && errors.name) { %>
                <div class="text-danger">
                   <%= errors.price.msg %>
              </div>
                <% } %>

            <input type="submit" value="Enviar">
        </form>
    </main>
    <%- include('./partials/footer') %>
    <script src="js/create.js"></script>
</body>
</html>